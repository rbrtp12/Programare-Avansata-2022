<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="VIEWS.CountriesEntity" table="COUNTRIES" schema="STUDENT">
        <id name="id">
            <column name="ID" sql-type="number(*)" precision="2147483646"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar2(100)" length="100" not-null="true"/>
        </property>
        <property name="code">
            <column name="CODE" sql-type="varchar2(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>